<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h3>Agregar un nuevo producto</h3>
            <form action="/admin/productos/agregar" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="productos" name="productos">

            </div>

            <div class="form-group">
                <textarea class="form-control" placeholder="precio" name="precio" ></textarea>

            </div>
            <button type="submit" class="btn btn-primary" >Guardar</button>
            </form>
            {{#if error}}
             <p>{{message}}</p>
            {{/if}}

        </div>

    </div>

</div>